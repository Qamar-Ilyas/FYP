@model Charity.Models.organizatiomodel

@{
    ViewBag.Title = "Organization";
}

<div class="jumbotron text-center" style="margin-top: 80px; box-shadow: 0 1px 2px rgba(0, 0, 0, .6)">
    <p>Sadqa And Zakat Collection And Distribution</p>
    <h2>Welcome Dear Organization</h2>


</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="form-horizontal well" style="box-shadow: 0 1px 2px rgba(0, 0, 0, .6)">
                    <div class="form-horizontal">
                        <h4>Add Organization</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
